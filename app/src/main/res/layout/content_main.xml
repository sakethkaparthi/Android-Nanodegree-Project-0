<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sakethkaparthi.myappportfolio.MainActivity"
    tools:showIn="@layout/activity_main">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/header_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="My Nanodegree Apps"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/spotify_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="spotify streamer"
        android:layout_below="@id/header_text_view"
        android:layout_marginBottom="10dp"
        android:background="#2980b9"/>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/scores_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="scores app"
        android:layout_below="@id/spotify_button"
        android:layout_marginBottom="10dp"
        android:background="#2980b9"/>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/library_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="library app"
        android:layout_below="@id/scores_button"
        android:layout_marginBottom="10dp"
        android:background="#2980b9"/>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/build_it_bigger_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="build it bigger"
        android:layout_below="@id/library_button"
        android:layout_marginBottom="10dp"
        android:background="#2980b9"/>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/xyz_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="xyz"
        android:layout_below="@id/build_it_bigger_button"
        android:layout_marginBottom="10dp"
        android:background="#2980b9"/>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/capstone_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="capstone: my own app"
        android:layout_below="@id/xyz_button"
        android:layout_marginBottom="10dp"
        android:background="#8e44ad"/>
</RelativeLayout>
